@model BOOK_STORE.Models.Book

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-5">
    <h1 class="text-danger">Delete Book</h1>
    <h3 class="text-warning">Are you sure you want to delete this book?</h3>

    <div class="alert alert-warning">
        <strong>Warning!</strong> This action is irreversible. Once you delete the book, it cannot be undone.
    </div>

    <div>
        <h4>Book Details</h4>
        <hr />
        <dl class="row">
            <!-- Book Title -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <!-- ISBN -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ISBN)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ISBN)
            </dd>

            <!-- Price -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <!-- Stock Quantity -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.StockQuantity)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.StockQuantity)
            </dd>

            <!-- Description -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <!-- Author -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Author.Name)
            </dd>

            <!-- Category -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
        </dl>
    </div>

    <!-- Delete Form -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <!-- Delete Button -->
        <div class="mt-3">
            <button type="submit" class="btn btn-danger btn-lg w-100">Delete Book</button>
        </div>

        <!-- Back to List -->
        <div class="mt-2">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to List</a>
        </div>
    </form>
</div>

<!-- Optional: Include Bootstrap JS if not already added -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
