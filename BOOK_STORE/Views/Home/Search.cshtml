@model IEnumerable<BOOK_STORE.Models.Book>

<h2>Search Results</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="/images/@book.ISBN" class="card-img-top img-fluid" alt="@book.Title" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text text-success"><strong>Price:</strong> $@book.Price</p>
                        <p class="card-text"><strong>Stock:</strong> @book.StockQuantity</p>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/Book/Details/@book.Id" class="btn btn-primary btn-sm">View Details</a>
                            <a href="/Cart/Add/@book.Id" class="btn btn-warning btn-sm">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        No books found matching your search criteria.
    </div>
}
