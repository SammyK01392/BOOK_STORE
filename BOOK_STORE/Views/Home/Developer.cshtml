<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Me</title>
    <style>


        /* Hero Section */
        .hero {
            background: url('../../wwwroot/images/sb-blog-programming.png') no-repeat center center/cover;
            color: white;
            text-align: center;
            padding: 100px 20px;
        }

            .hero h1 {
                font-size: 3.5rem;
                font-weight: 600;
                animation: fadeIn 2s ease-out;
            }

            .hero p {
                font-size: 1.2rem;
                margin: 20px 0;
                animation: fadeIn 2s ease-out 0.5s;
            }

        /* General styles */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: black;
            color: #fff;
        }

        a {
            text-decoration: none;
        }

        button {
            font-family: inherit;
            font-size: 1rem;
        }


        /* About section styles */
        .about {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 4rem 2rem;
            background-color: transparent;
        }

        .about-text {
            max-width: 50%;
        }

            .about-text h1 {
                font-size: 3rem;
                margin: 0 0 1rem;
                font-weight: bold;
                color: black;
            }

                .about-text h1 span {
                    color: darkred;
                }

            .about-text p {
                color: #aaa;
                line-height: 1.6;
                margin-bottom: 2rem;
            }

            .about-text button {
                background-color: #ffd700;
                color: #000;
                border: none;
                padding: 0.75rem 1.5rem;
                font-weight: bold;
                cursor: pointer;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .about-text button:hover {
                    background-color: #ffcc33;
                }

        .about-image {
            max-width: 45%;
        }

            .about-image img {
                width: 100%;
                border-radius: 15px;
            }


        /* Skills Section */
        .skills ul {
            list-style-type: none;
            padding: 0;
        }

            .skills ul li {
                background: linear-gradient(45deg, #6a11cb, #2575fc);
                color: white;
                border: none;
                border-radius: 5px;
                margin-bottom: 10px;
                padding: 10px 15px;
                display: inline-block;
                margin-right: 10px;
                font-weight: bold;
                font-size: 1.1rem;
                cursor: pointer;
                transition: all 0.3s ease;
            }

                .skills ul li:hover {
                    background: linear-gradient(45deg, #ff6a00, #ee0979);
                    box-shadow: 0 4px 15px rgba(255, 106, 0, 0.75);
                    transform: scale(1.1);
                }

    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero">
        <h1>Hello! I'm <span class="text-danger">Full-Stack .NET Developer</span></h1>
        <p>Building robust, scalable web applications with .NET and JavaScript.</p>
        <button class="btn btn-danger me-2">Learn More</button>
        <button class="btn btn-outline-light">Play Video</button>
    </section>

  

    <!-- About Section -->
    <section class="about">
        <div class="about-text">
            <h1>Hello, Welcome<br>I’m <span>SAMEER KARALE </span></h1>
            <p>
                passionate about full-stack development, creating <span class="highlight">intuitive</span> websites and applications. With expertise in .NET, JavaScript, and database design, I am eager to contribute to impactful projects.
            </p>
        </div>
        <div class="about-image">
            <img src="~/images/dev.jpeg" alt="sameer karale ">
        </div>
    </section>

    <!-- Skills Section -->
    <section class="skills py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">My Skills</h2>
            <ul class="text-center fade-in" id="skills-list">
                <li>.NET Core</li>
                <li>ASP.NET Core MVC</li>
                <li>C#</li>
                <li>JavaScript (React, Angular)</li>
                <li>SQL Server</li>
                <li>RESTful APIs</li>
                <li>HTML & CSS</li>
                <li>Bootstrap</li>
                <li>Version Control (Git)</li>
            </ul>
        </div>
    </section>
</body>
</html>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<!-- Custom JavaScript -->
<script>
    // Scroll animation for Skills section
    const sections = document.querySelectorAll(".fade-in");
    const observer = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("visible");
                }
            });
        },
        { threshold: 0.5 }
    );

    sections.forEach((section) => observer.observe(section));

    // Buttons functionality
    document.querySelector(".btn-danger").addEventListener("click", () => {
        alert("Learn more about my skills and projects!");
    });

    document.querySelector(".btn-outline-light").addEventListener("click", () => {
        alert("Video functionality coming soon!");
    });
</script>