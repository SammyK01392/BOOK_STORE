@model BOOK_STORE.Models.Order

@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Checkout Confirmation</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Book</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.Book.Title</td>
                            <td>@item.Quantity</td>
                            <td>$@item.Price</td>
                            <td>$@(item.Quantity * item.Price)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4">
        <h4 class="text-right font-weight-bold">Total: $@Model.TotalAmount</h4>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Payment" asp-route-orderId="@Model.Id" method="post">
            <button type="submit" class="btn btn-primary btn-lg">Proceed to Payment</button>
        </form>
    </div>
</div>

<!-- Adding some custom CSS -->
<style>
    .container {
        max-width: 900px;
    }
    .table th, .table td {
        text-align: center;
    }
    .btn {
        padding: 10px 30px;
        font-size: 18px;
        text-transform: uppercase;
    }
    .card {
        border: 0;
        border-radius: 10px;
    }
    h4 {
        color: #333;
        font-size: 1.2rem;
    }
</style>
