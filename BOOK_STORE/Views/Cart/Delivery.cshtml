@model BOOK_STORE.Models.Order

@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delivery Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <p class="text-center mb-4">Thank you for your payment! Your order is now being processed for delivery.</p>

            <form asp-action="Delivery" asp-route-orderId="@Model.Id" method="post">
                <div class="form-group">
                    <label for="deliveryAddress" class="font-weight-bold">Delivery Address:</label>
                    <input type="text" id="deliveryAddress" name="deliveryAddress" class="form-control" required placeholder="Enter your delivery address" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Confirm Delivery</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Adding custom CSS to enhance appearance -->
<style>
    .container {
        max-width: 600px;
    }

    h2 {
        font-size: 2rem;
        color: #333;
    }

    p {
        font-size: 1.1rem;
        color: #555;
    }

    .form-group label {
        font-size: 1.1rem;
        color: #333;
    }

    .form-control {
        font-size: 1rem;
        padding: 10px;
    }

    .btn {
        padding: 12px 30px;
        font-size: 18px;
        text-transform: uppercase;
        font-weight: bold;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .card-body {
        padding: 30px;
    }

    .card-shadow-sm {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .text-center {
        text-align: center;
    }
</style>
